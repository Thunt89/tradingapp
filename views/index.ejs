<% include partials/header%>

<h1> Add Trades</h1>

<% if(errors){ %>
  <ul>
  <% errors.forEach(function(error){ %>
        <li> <%= error.msg %></li>
  <% }) %>
  </ul>
<% } %>


<form method="POST" action="/trades/add">
  <label>BTC Amount </label><br>
  <input type="number" name="btc">
  <br>
  <label>USD Amount </label><br>
  <input type="number" name="usd">
  <br>
  <label>Date </label><br>
  <input type="date" name="trade_date">
  <br><br>
  <input type="submit" value="Submit">
</form>

<h1><%= title %></h1>
<ul>
<% trades.forEach(function(trade){ %>
    <li> <%= trade.trade_date%>- Buy <%= trade.btc %> BTC for $<%= trade.usd %> -
        <a href="#" class="deleteTrade" data-id="<%= trade._id %>"> Delete</a>
    </li>
<% }) %>
</ul>

<% include partials/footer%>
